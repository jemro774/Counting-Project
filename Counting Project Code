for n in range(8,21): #Total number of marbles in jar
    for w in range(3,16): #Amount of money won if the correct type of marble is chosen
        for x in range(0,n+1): #Number of red marbles in jar
            for y in range(0,(n-x)+1) #Number of green marbles in jar
print("D =",(x/n)*w) #D value if red marble is the prize winner
print("D =",(y/n)*w) #D value if green marble is the prize winner

